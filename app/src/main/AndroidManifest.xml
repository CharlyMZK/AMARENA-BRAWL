<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amarena.rss.amarena_brawl">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/appName"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="com.orm.SugarApp">
        <meta-data android:name="DATABASE" android:value="amarena.db" />
        <meta-data android:name="VERSION" android:value="1.0" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="com.amarena.rss.amarena_brawl.models" />

        <activity android:name=".screens.MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screens.SettingsActivity" />
        <activity android:name=".screens.GameActivity" />
        <activity android:name=".screens.CustomisationActivity"/>

    </application>

</manifest>